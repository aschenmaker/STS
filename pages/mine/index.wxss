/* pages/about/index.wxss */
.page {
	background-color: #f1f1f1;
}
.user-block {
	background-color: #5fb442;
	height: 450rpx;
	display: flex;
	justify-content: center;
	padding-top: 40rpx;
	position: relative;
	flex-direction: column;
	align-items: center;
	font-weight: 300;
	text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.user-avatar image {
	margin-left: auto;
	margin-right: auto;
	height: 160rpx;
	width: 160rpx;
	background-color: aliceblue;
	text-align: center;
	vertical-align: center;
	border-radius: 50%;
}

image {
	max-width: 100%;
	display: inline-block;
	position: relative;
	z-index: 0;
}

.user-id {
	font-size: 36rpx;
	margin-top: 5px;
}

.gif-wave {
	position: absolute;
	width: 100%;
	bottom: 0;
	left: 0;
	z-index: 99;
	mix-blend-mode: screen;
	height: 190rpx;
}

.subscribe {
	display: flex;
	background-color: #ffffff;
	text-align: center;
	color: rgb(128, 128, 128);
	padding: 30rpx;
}
.subscribe .info-box {
	box-sizing: border-box;
	flex-direction: column;
	flex: 1;
}

.mid {
	border-left: 1rpx solid #e1e1e1;
	border-right: 1rpx solid #e1e1e1;
}

.num-sub {
	font-size: 44rpx;
	color: #ed6762;
}

.num-new {
	font-size: 44rpx;
	color: #5873f6;
}

.num-star {
	font-size: 44rpx;
	color: #f5bf60;
}

.descirption {
	margin-top: 10rpx;
	box-sizing: border-box;
	font-size: 13px;
}
.title {
	display: inline-block;
	vertical-align: middle;
}

.icon-in {
	display: inline-block;
	vertical-align: middle;
	padding-left: 1px;
}

.setting-list {
	margin-top: 50rpx;
	padding: 0 30rpx;
	border-radius: 20rpx;
	box-sizing: border-box;
}

.list-item {
	position: relative;
	display: flex;
	padding: 0 30rpx;
	min-height: 100rpx;
	background-color: #ffffff;
	align-items: center;
	color: rgb(128, 128, 128);
	font-size: 30rpx;
}

.list-item::after {
	position: absolute;
	top: 0;
	left: 0;
	box-sizing: border-box;
	width: 200%;
	height: 200%;
	border-bottom: 1rpx solid #ddd;
	content: '';
	transform: scale(.5);
	transform-origin: 0 0;
}
