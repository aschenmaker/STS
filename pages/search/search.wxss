/* pages/index/search/search.wxss */
.main {
	position: fixed;
	top: 0;
	width: 100vw;
	z-index: 1;
}
.hide {
	display: none;
}
.namebar {
	padding-left: 20rpx;
	background-color: #4752b3;
}

.namebar > .content {
	font-size: 30px;
	font-weight: 300;
	line-height: 29px;
	color: #ffffff;
}

.namebar > .desc {
	font-size: 13px;
	line-height: 31px;
	color: rgba(255, 255, 255, 0.54);
}
.search-bar {
	box-shadow: 0 5px 8px rgba(0, 0, 0, .28);
}
.section {
	margin: 0;
	background-color: #ffffff;
	box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 4px rgba(0, 0, 0, .24);
}
.options {
	padding: 2px 10px 0px 10px;
}
.options > text {
	font-size: 12px;
	line-height: 18px;
	color: #404040;
}

.create-subcribe-options {
	padding: 0 10px;
}

.picker-view {
	padding-top: 7px;
	padding-bottom: 7px;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: baseline;
}
.delay-email {
	margin: auto;
	font-size: 13px;
	background-color: #4d90fe;
	color: #fff;
	padding: 2px 8px;
	border-radius: 2px;
}

.subscribe-keywords {
	line-height: 27px;
	height: 27px;
	padding: 0 18px 0 6px;
	border-radius: 2px;
	text-align: left;
	background-color: #f5f5f5;
	border: 1px solid #dcdcdc;
	width: 50vw;
	justify-items: center;
	font-size: 12px;
	color: #454545;
}
.subscribe-emails {
	line-height: 27px;
	height: 27px;
	padding: 0 18px 0 6px;
	border-radius: 2px;
	text-align: left;
	background-color: #f5f5f5;
	border: 1px solid #dcdcdc;
	width: 50vw;
	justify-items: center;
	font-size: 12px;
	color: #454545;
	width: 160px;
}

.icon-style {
	margin: auto 15px;
}
.icon-style-done {
	margin: auto 0px auto 15px;
}

.textPicker {
	font-size: 13px;
	align-items: center;
	width: 30%;
	color: #737373;
	vertical-align: baseline;
	margin-top: auto;
	margin-bottom: auto;
}

picker {
	line-height: 27px;
	padding: 0 18px 0 6px;
	border-radius: 2px;
	text-align: left;
	background-color: #f5f5f5;
	border: 1px solid #dcdcdc;
	width: 50vw;
	justify-items: center;
	font-size: 12px;
	color: #444444;
}

.creatButton {
	padding: 10px 10px 16px 10px;
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
}

.subbutton {
	font-size: 11px;
	font-weight: bold;
	margin-right: 16px;
	color: #fff;
	background-color: #4d90fe;
	padding: 8px 20px;
	border-radius: 2px;
	margin-left: 0;
}

.subbutton_hover {
	background-color: #357ae8;
}

.showbutton {
	font-size: 12px;
	font-weight: 400;
	color: #427fed;
	background-color: #fff;
	margin-left: 0;
	padding: 0;
}

.showbutton::after {
	border: 0;
}

.create-subcribe-options {
	transition: opacity .3s;
}

.create-subcribe-options {
	height: 0;
	overflow: hidden;
}
.options-show {
	height: auto;
}

.content-list-item {
	padding: 12px 0px 12px 0px;
	border-top: 1px solid #e4e4e4;
	border-radius: 4rpx;
	overflow: hidden;
}

.page-content {
	padding: 400rpx 25px 0 25px;
}

.page-title {
	color: rgba(0, 0, 0, 0.54);
	font-size: 20px;
	font-weight: 300;
	display: inline-block;
	margin-top: 30px;
	margin-bottom: 0;
}

.content-list-item-news {
	align-items: center;
	transition: opacity .3s;
}

.content-list-block {
	font-weight: 400;
	line-height: 19px;
	margin: 0;
	visibility: visible;
}

.content-list-tittle {
	display: inline;
	color: #404040;
	font-size: 14px;
	font-style: normal;
	text-align: left;
	clear: left;
	text-overflow: ellipsis;
}

.content-list-author {
	padding-top: 12px;
	color: #aaa;
	white-space: nowrap;
	padding: 2px 0px;
}

.content-list-content {
	color: #707070;
	display: block;
	font-size: 12px;
	font-weight: 400;
	line-height: 20px;
}
