<view class="main">
       <view class="namebar">
        <view class="content">🔍订阅搜索</view>
        <view class="desc">即刻订阅你想搜索的内容</view>
 </view>
 <view class="search-bar">
       <mp-searchbar bindselectresult="selectResult" placeholder="创建你的搜索订阅吧" search="{{search}}" borderColor="#4752b3" ext-class="{{searchbarstyle}}" searchbarText="创建你的搜索订阅吧"  bindconfirm="comfirmSearch">    </mp-searchbar>
</view>
<view class="section">
      <view class="options">
       <text class=" {{optionsIsShow?'hide':''}}" >这将为您创建订阅</text>
      </view>
      <view class="create-subcribe-options {{optionsIsShow?'options-show':''}}">
             <!-- 频率： -->
             <view class="picker-view">
                    <text class="textPicker">频率</text>
              <picker bindchange="bindPickerChangeF" value="{{frequentIndex}}" range="{{frequent}}">           
                    <view class="picker">{{frequent[frequentIndex]}}</view>
              </picker>
             </view>
             
              <!-- 来源： -->
                <view class="picker-view">
                        <text class="textPicker">来源</text>
              <picker bindchange="bindPickerChangeC" value="{{fromIndex}}" range="{{from}}">
                    <view class="picker">{{from[fromIndex]}}</view>
              </picker>
                </view>
             
              <!-- 数量： -->
                <view class="picker-view">
                      <text class="textPicker">数量</text>
                      <picker bindchange="bindPickerChangeA" value="{{amountIndex}}" range="{{amount}}">
                    <view class="picker">{{amount[amountIndex]}}</view>
                   </picker>
                </view>
       
              <!-- 语言： -->
                <view class="picker-view">
                       <text class="textPicker">语言</text>
                      <picker bindchange="bindPickerChangeL" value="{{languageIndex}}" range="{{language}}">
                    <view class="picker">{{language[languageIndex]}}</view>
                  </picker>
                </view>
              
              <!-- 订阅模式： -->
                <view class="picker-view">
                         <text class="textPicker">订阅模式</text>
              <picker bindchange="bindPickerChangeS" value="{{subscribeModeIndex}}" range="{{subscribeMode}}">
                    <view class="picker">{{subscribeMode[subscribeModeIndex]}}</view>
              </picker>
                </view>
            
       </view>

         
      <view class="creatButton">
            <button class="weui-btn subbutton"  hover-class="subbutton_hover" size="mini" id="create_subcribe" bindtap="createSubscibe" >创建订阅</button>
            <button class="weui-btn subbutton"  size="mini" id="save_subcribe" style="display:none">更新订阅</button>
            <button class="showbutton {{optionsIsShow?'hide':''}}" id="show_options" bindtap="showOptions" >显示选项 ▼</button>
            <button class="showbutton {{optionsIsShow?'':'hide'}}" id="hide_options" bindtap="showOptions">隐藏选项 ▲</button>
      </view>
</view>
</view>
<view class="page-content">
       <view class="content-list">
              <block wx:for-items="{{contentlist}}" wx:key="id">
                     <view class="content-list-item">
                            <view class="content-list-item-news">
                                   <view class="content-list-block">
                                          <view class="content-list-tittle">{{item.title}}</view>
                                          <view class="content-list-author"></view>
                                   </view>
                                   <view class="content-list-content">{{item.content}}</view>
                            </view>
                     </view>
              </block>
       </view>
</view>