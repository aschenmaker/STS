/* pages/index/search/search.wxss */
.namebar {
	padding-left: 20rpx;
	background-color: #4752b3;
	height: 240rpx;
}

.namebar > .content {
	font-size: 30px;
	font-weight: 300;
	line-height: 29px;
	color: #ffffff;
	padding-top: 130rpx;
}

.namebar > .desc {
	font-size: 13px;
	line-height: 31px;
	color: rgba(255, 255, 255, 0.54);
}
.search-bar {
	box-shadow: 0 5px 8px rgba(0, 0, 0, .28);
}
.section {
	margin: 0;
	box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 4px rgba(0, 0, 0, .24);
}
.options {
	padding: 2px 10px 0px 10px;
}
.options > text {
	font-size: 12px;
	line-height: 18px;
	color: #404040;
}
.create-subcribe-options {
	transition: opacity .3s;
}
.options-show {
	opacity: .2;
}

.create-subcribe-options {
	height: 0;
	overflow: hidden;
}
.options-show {
	height: auto;
}

.content-list-item {
	margin: 20rpx 0;
	background-color: #ffffff;
	border-radius: 4rpx;
	overflow: hidden;
}

.content-list-item-news {
	padding: 30rpx;
	display: flex;
	align-items: center;

	transition: opacity .3s;
}
