/* pages/index/search/search.wxss */
.namebar {
	padding-left: 20rpx;
	background-color: #4752b3;
}

.namebar > .content {
	font-size: 30px;
	font-weight: 300;
	line-height: 29px;
	color: #ffffff;
}

.namebar > .desc {
	font-size: 13px;
	line-height: 31px;
	color: rgba(255, 255, 255, 0.54);
}
.search-bar {
	box-shadow: 0 5px 8px rgba(0, 0, 0, .28);
}
.options > text {
	font-size: 12px;
}
.create-subcribe-options {
	transition: opacity .3s;
}
.options-show {
	opacity: .2;
}

.create-subcribe-options {
	height: 0;
	overflow: hidden;
}
.options-show {
	height: auto;
}

.content-list-item {
	margin: 20rpx 0;
	background-color: #ffffff;
	border-radius: 4rpx;
	overflow: hidden;
}

.content-list-item-news {
	padding: 30rpx;
	display: flex;
	align-items: center;

	transition: opacity .3s;
}
